{
  "manifest_version": 2,
  "name": "Icefly",
  "version": "2.0",

  "description": "Prolong your Firefly logins",

  "permissions": ["storage"],
  "optional_permissions": ["cookies", "<all_urls>"],

  "background": {
    "scripts": ["icefly.js"],
    "persistent": false
  },

  "options_ui": {
    "page": "opts.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "icefly@bartlett-m.github.io"
    }
  }
}

